{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "include": [
    "./src"
  ],
  "exclude": ["node_modules", "dist"]
}